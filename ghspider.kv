#:kivy 1.0.9

<GHSpiderWidget>:
    GridLayout:
        rows:3
        size_hint: 1, 1
        top: root.top
        width: root.width
        height: root.height
        Label:
            text: "Welcome to GitHub Spider"
            font_size: 34
            size_hint: 1, 0.5
        GridLayout:
            cols: 1
            rows: 2
            GridLayout:
                cols: 2
                rows: 2
                Label:
                    text: "GitHub username: "
                TextInput:
                    id: ghuser_ti
                    size_hint: 0.7, 1
                Label:
                    text: "Target Path: "
                TextInput:
                    id: targetpath_ti
                    size_hint: 0.7, 1
            Button:
                text: "Backup!"
                on_press: root.gather_and_backup({'ghuser_ti': ghuser_ti, 'targetpath_ti': targetpath_ti, 'output_ti': output_ti})
        TextInput:
            text: "Result"
            id: output_ti
            size_hint: 1, 1.5
